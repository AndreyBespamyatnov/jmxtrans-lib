{
    "servers": [
        {
            "port": 9015,
            "host": "hadoop02.myorg.com",
            "queries": [
                {
                    "outputWriters": [
                        {
                            "@class": "com.googlecode.jmxtrans.model.output.GraphiteWriter",
                            "settings": {
                                "port": 2003,
                                "host": "graphite.myorg.com"
                            }
                        }
                    ],
                    "obj": "hadoop:service=TaskTracker,name=RpcActivityForPort*",
                    "resultAlias": "TaskTrackerRpcActivity",
                    "attr": [
                        "NumOpenConnections",
                        "ReceivedBytes",
                        "SentBytes",
                        "RpcProcessingTimeAvgTime",
                        "RpcProcessingTimeMinTime",
                        "RpcProcessingTimeMaxTime",
                        "RpcProcessingTimeNumOps",
                        "RpcQueueTimeAvgTime",
                        "RpcQueueTimeMinTime",
                        "RpcQueueTimeMaxTime",
                        "RpcQueueTimeNumOps",
                        "callQueueLen"
                    ]
                }
            ],
            "numQueryThreads": 2
        }
    ]
}